@model List<EmployerRegister.Models.Domain.Employee>

<h1>Employees List</h1>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Salary</th>
            <th>Date Of Birth</th>
            <th>Department</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.Salary</td>
                <td>@employee.DateofBirth.ToString("dd-MM-yyy")</td>
                <td>@employee.Department</td>
                <td><a href="Employees/View/@employee.Id">Details</a></td>
            </tr>
        }
    </tbody>

</table>